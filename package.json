{
  "name": "utkonos-assistant",
  "version": "0.2.0",
  "description": "Some useful functionality for Utkonos.ru the Web Supermarket",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "build-ext": "web-ext build --source-dir ./dist/ --artifacts-dir ./build/",
    "lint": "eslint --ext .js,.ts src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "cross-env NODE_ENV=development webpack --watch",
    "start:firefox": "web-ext run --source-dir ./dist/ --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexey-lapin/utkonos-assistant.git"
  },
  "keywords": [
    "utkonos",
    "firefox",
    "web-extension"
  ],
  "author": "Alexey Lapin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexey-lapin/utkonos-assistant/issues"
  },
  "homepage": "https://github.com/alexey-lapin/utkonos-assistant#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "copy-webpack-plugin": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0",
    "progress-bar-webpack-plugin": "^2.1.0",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.5",
    "web-ext": "^5.5.0",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  }
}
